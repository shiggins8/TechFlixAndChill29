<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pink_purple" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Welcome to TechFlix and Chill!"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usernameTextView"
        android:layout_marginTop="15dp"
        android:text="View Profile"
        android:id="@+id/viewProfileButton"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textView1" />


    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/logoutButton"
        android:layout_alignBottom="@+id/viewProfileButton"
        android:layout_alignEnd="@+id/textView1" />

    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/usernameTextView"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textSize="@dimen/abc_text_size_large_material" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Movies"
        android:id="@+id/searchMoviesBtn"
        android:layout_below="@+id/viewProfileButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="New In Theaters"
        android:id="@+id/newReleasesBtn"
        android:layout_below="@+id/searchMoviesBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="New on DVD"
        android:id="@+id/newOnDVDBtn"
        android:layout_below="@+id/newReleasesBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="View My Ratings"
        android:id="@+id/viewMyRatingsBtn"
        android:layout_below="@id/newOnDVDBtn"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Recommendations"
        android:id="@+id/getRecommendationsBtn"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/viewMyRatingsBtn"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>