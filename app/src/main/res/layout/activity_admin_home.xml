<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pink_purple" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="WELCOME TO TECHFLIX AND CHILL!"
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:background="@drawable/background_round_corner_button"
        android:id="@+id/logoutButton"
        android:layout_above="@+id/viewUsers"
        android:textStyle="italic"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/usernameTextView"
        android:layout_marginTop="33dp"
        android:gravity = "center_horizontal"
        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/viewUsers"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textStyle="italic"
        android:background="@drawable/background_round_corner_button"
        android:text="View User List"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>