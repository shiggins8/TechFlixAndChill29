<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewMoviesInTheatersActivity" >

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Based on Major"
        android:id="@+id/majorRecommendationsBtn"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <Spinner
        android:id="@+id/chooseMajorSpinner"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_alignEnd="@+id/majorRecommendationsBtn"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/background_round_corner_edittext"
        android:spinnerMode="dropdown" />

    <ListView
        android:id="@+id/lvRecommendations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chooseMajorSpinner"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true">

    </ListView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/noMoviesTextView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_toEndOf="@+id/majorRecommendationsBtn" />
</RelativeLayout>