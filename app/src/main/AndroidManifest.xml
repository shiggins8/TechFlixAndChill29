<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.gatech.snickers.techflixandchill">

    <uses-sdk android:minSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />

    <android:uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/tflix_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Home" />
        <activity android:name=".Registration" />
        <activity
            android:name=".UserProfile"
            android:label="@string/title_activity_user_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SearchMovies"
            android:label="@string/title_activity_search_movies"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NewInTheaters"
            android:label="@string/title_activity_new_in_theaters"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NewOnDvd"
            android:label="@string/title_activity_new_on_dvd"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BoxOfficeActivity"
            android:label="@string/title_activity_box_office"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
